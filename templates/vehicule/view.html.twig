{% extends "base.html.twig" %}

{% block title %}{{ vehicule.titre }}{% endblock %}

{% block body %}




<div class="container card my-5">
  <div class="row p-5">
    <div class="col-6 d-flex align-center justify-content-center">
      <img src="{{ vehicule.photo }}" alt="">
    </div>
    <div class="card-body col-6">
      
        
      <h4 class="card-title">{{ vehicule.titre }}</h4>
      
      <p class="card-text md-3">{{ vehicule.description }}</p>
      <h5 class="card-subtitle mb-4 text-muted">{{ vehicule.prixjournalier }}€/jour</h5>
      <div class="my-2">
        {{form_start(formCommande) }}
        
        {{form_row(formCommande.date_heure_depart) }}
        {{form_row(formCommande.date_heure_fin) }}
        
        
        <div class="d-flex p-2">
          <button type="submit" class="btn btn-primary ">Réserver</button>
          {{form_end(formCommande) }}
          {% if is_granted("ROLE_ADMIN") %}  
          <a href="{{ path('admin_vehicule_edit', {id:vehicule.id}) }}" class="btn btn-warning mx-2">Edit</a>
         {% endif %} 
        </div>
      </div>
    </div>
  </div>
  
</div>
 

{% endblock %}